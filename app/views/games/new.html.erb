<h1>New game</h1>
<div class="d-flex flex-row flex-wrap gap-2">
  <% @letters.each do |item| %>
  <div class="card text-white bg-primary text-center" style="width:3rem; height:3rem;">
    <div class="card-body p-1 d-flex align-items-center justify-content-center">
      <%= item %>
    </div>
  </div>
  <% end %>
</div>
<p class="mt-3">What is the longest word you can find:</p>
<form class="d-flex" action="/score" data-turbo="false" method="post">
  <input id="token" name="letters" type="hidden" value="<%= @letters.join(" ") %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" class="form-control me-2" aria-label="Your word" aria-describedby="button" name="word">
  <button type="submit" class="btn btn-primary" id="button">Play</button>
</form>
